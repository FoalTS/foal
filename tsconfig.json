{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@foal/core": ["./src"]
    },
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "e2e/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
